<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FadeAnimationStyle</item>
    </style>

    <style name="FadeAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--会影响状态栏颜色-->
        <item name="colorPrimaryDark">@color/transfer_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mainActivityTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--防止白屏-->
    <style name="StartAppTheme" parent="BaseAppTheme">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@mipmap/luncher</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_bg_shap</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="toast_text">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="progressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!-- 这个属性就是配置进度的颜色和背景的颜色 -->
        <item name="android:progressDrawable">@drawable/bg_progressbar_upload</item>
        <item name="android:minHeight">@dimen/y2</item>
        <item name="android:maxHeight">@dimen/y2</item>
    </style>

    <style name="common_button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/x295</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bt_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="common_button_1" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/x355</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bt_shape_1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="common_edit_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="NoBackGroundDialog" parent="AppTheme.Base">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="payment_dialog_notice" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/common_dialog_bg_shape</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

</resources>
