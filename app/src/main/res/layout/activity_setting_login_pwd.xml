<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_modify_pwd_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="@dimen/x20">

        <include
            android:id="@+id/login_old_pwd_ll"
            layout="@layout/common_edit_item" />

        <include
            android:id="@+id/login_new_pwd_ll"
            layout="@layout/common_edit_item" />

        <include
            android:id="@+id/login_comfirm_pwd_ll"
            layout="@layout/common_edit_item" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:text="@string/change_login_pwd_notice"
        android:textColor="@color/bt_start_color"
        android:textSize="@dimen/text_size_12" />

    <Button
        android:id="@+id/login_pwd_change_bt"
        style="@style/common_button"
        android:layout_marginTop="@dimen/y25"
        android:shadowColor="@color/edittext_color_hint"
        android:text="@string/submit" />
</LinearLayout>