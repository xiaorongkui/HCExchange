<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y50"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y49"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/common_edit_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机"
            android:textColor="@color/edittext_color"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/common_edit_item_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x100"
            android:layout_marginStart="@dimen/x87"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/login_account"
            android:inputType="number"
            android:maxLines="1"
            android:textColorHint="@color/edittext_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/common_edit_item_code_tv"
            android:layout_width="@dimen/x80"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:gravity="center"
            android:text="@string/get_register_code"
            android:textColor="@color/bt_end_color"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/common_edit_line" />
</LinearLayout>
