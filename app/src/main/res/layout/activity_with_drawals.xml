<?xml version="1.0" encoding="utf-8"?>
<com.hacai.exchange.ui.widget.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_with_resizelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:orientation="vertical">

                <include layout="@layout/common_header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y78"
                    android:layout_marginTop="@dimen/y10"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/draw_with_bank_icon_iv"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/y50"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/x20"
                        android:src="@mipmap/tabbar_icon_licai_sel" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/x15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/draw_with_bank_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中国工商银行"
                            android:textColor="@color/text_normal_color"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/draw_with_bank_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:text="666*************078"
                            android:textColor="@color/text_normal_hint_color"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/draw_with_account_available_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y44"
                    android:layout_marginTop="@dimen/y10"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x20"
                    android:text="账户余额"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/text_size_14" />

                <View style="@style/common_edit_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y44"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x20"
                    android:text="提现金额"
                    android:textColor="@color/edittext_color"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/dollar"
                        android:textColor="@color/edittext_color"
                        android:textSize="@dimen/text_size_36" />

                    <EditText
                        android:id="@+id/whithdraw_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:inputType="number|numberDecimal"
                        android:maxLines="1"
                        android:hint="@string/input_money"
                        android:textColor="@color/edittext_color"
                        android:textColorHint="@color/edittext_color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_36" />
                </LinearLayout>

                <TextView
                    android:id="@+id/real_drwam_moeny_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/y18"
                    android:paddingStart="@dimen/x20"
                    android:paddingTop="@dimen/y30"
                    android:text="实际到账"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/text_size_14" />

                <RelativeLayout
                    android:id="@+id/with_draw_describe_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y54"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/with_draw_describe_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x20"
                        android:layout_marginStart="@dimen/x20"
                        android:text="@string/with_draw_describe_notice"
                        android:textColor="@color/edittext_color_hint"
                        android:textSize="@dimen/text_size_12" />
                </RelativeLayout>

                <View
                    android:id="@+id/with_draw_describe_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/x20">

                    <TextView
                        android:id="@+id/with_draw_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y44"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/y5"
                        android:textColor="@color/edittext_color"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <include
                        android:id="@+id/with_draw_phone_code_ll"
                        layout="@layout/common_edit_item" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/with_draw_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">

            <Button
                android:id="@+id/with_drawals_bt"
                style="@style/common_button_1"
                android:layout_centerInParent="true"
                android:shadowColor="@color/edittext_color_hint"
                android:text="@string/submit" />
        </RelativeLayout>
    </LinearLayout>
</com.hacai.exchange.ui.widget.ResizeLayout>