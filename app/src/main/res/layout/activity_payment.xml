<?xml version="1.0" encoding="utf-8"?>
<com.hacai.exchange.ui.widget.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_header" />

        <android.support.v7.widget.CardView
            android:id="@+id/product_payment_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/year_rate_expect"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/product_deadline"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/product_investment_money"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/payment_year_rate_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/edittext_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/payment_deadline_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/edittext_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/payment_start_money_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/edittext_color"
                        android:textSize="@dimen/text_size_24" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/payment_list_prg_bar"
                    style="@style/progressBarHorizontal_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:max="100"
                    android:progress="60" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginTop="@dimen/y10">

                    <TextView
                        android:id="@+id/payment_available_investment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/payment_have_investment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:text="@string/payment_money"
                    android:textColor="@color/edittext_color"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_limit_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/x10"
                    android:textColor="@color/text_normal_hint_color"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expected_profit_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/bt_start_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y30"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:paddingTop="@dimen/y30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dollar"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_36" />

            <EditText
                android:id="@+id/payment_money_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x11"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:hint="@string/input_money"
                android:inputType="number"
                android:maxLength="12"
                android:maxLines="1"
                android:textColor="@color/edittext_color"
                android:textColorHint="@color/edittext_color_hint_1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_36" />
        </LinearLayout>

        <View style="@style/common_edit_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/available_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:text="@string/myaccount_available_money_1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/available_money_accoun_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:layout_toEndOf="@+id/available_money_tv"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/payment_recharge_bt"
                style="?android:borderlessButtonStyle"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x20"
                android:background="@color/bt_end_color"
                android:gravity="center"
                android:text="@string/myaccount_recharge"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/payment_agreement_read_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/y15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/payment_agreement_iv"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y18"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_box_unsel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x10"
                    android:text="@string/agrement"
                    android:textColor="@color/toast_backgrounde"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/payment_agreement_read_ll"
                android:layout_toEndOf="@id/payment_agreement_read_ll"
                android:orientation="vertical">

                <com.hacai.exchange.ui.widget.MyListView
                    android:id="@+id/product_payment_agreement_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x5" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">

            <Button
                android:id="@+id/payment_buy_bt"
                style="@style/common_button_1"
                android:layout_centerInParent="true"
                android:shadowColor="@color/edittext_color_hint"
                android:text="@string/investment_immediately" />
        </RelativeLayout>
    </LinearLayout>
</com.hacai.exchange.ui.widget.ResizeLayout>