<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/forget_pwd_two_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_header" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingStart="@dimen/x20">

            <TextView
                android:id="@+id/forget_pwd_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y20"
                android:text="账号： 1234567890"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_14" />

            <include
                android:id="@+id/forget_pwd_ll"
                layout="@layout/common_edit_item" />

            <include
                android:id="@+id/forget_again_pwd_ll"
                layout="@layout/common_edit_item" />
        </LinearLayout>

        <Button
            android:id="@+id/forget_pwd_two_bt"
            style="@style/common_button"
            android:layout_marginTop="@dimen/y30"
            android:shadowColor="@color/bt_start_color"
            android:text="@string/comfirm" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>