<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_item_buying_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:text="哈财A006"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_item_buying_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:text="推荐"
                android:textColor="@color/bt_end_color"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y49"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_buying_year_rate_show_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x35"
                        android:textColor="@color/bt_end_color"
                        android:textSize="@dimen/text_size_36" />

                    <TextView
                        android:id="@+id/home_buying_year_rate_float_show_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/home_buying_year_rate_show_tv"
                        android:layout_toEndOf="@id/home_buying_year_rate_show_tv"
                        android:textColor="@color/bt_end_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/home_buying_year_rate_float__tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/home_buying_year_rate_show_tv"
                        android:layout_below="@id/home_buying_year_rate_show_tv"
                        android:layout_marginBottom="@dimen/y30"
                        android:layout_marginTop="@dimen/y5"
                        android:text="@string/year_rate_expect"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/home_buying_deadline__tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/home_buying_year_rate_show_tv"
                        android:layout_marginStart="@dimen/x245"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/home_buying_start_money__tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_buying_deadline__tv"
                        android:layout_marginStart="@dimen/x245"
                        android:layout_marginTop="@dimen/y12"
                        android:textColor="@color/text_normal_color"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>