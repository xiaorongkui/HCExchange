<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/common_header" />

    <RelativeLayout
        android:id="@+id/bind_card_init_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/colorWhite"
        android:elevation="@dimen/y1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_bank_card"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/y26"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y14"
                android:src="@mipmap/myaccount_bankcard_icon_add" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>