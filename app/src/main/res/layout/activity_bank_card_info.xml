<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bank_card_icon"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_marginStart="@dimen/x20"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/x30"
                android:layout_marginStart="@dimen/x15">

                <TextView
                    android:id="@+id/bank_info_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edittext_color"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/bank_card_info_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bank_info_name_tv"
                    android:layout_marginTop="@dimen/y10"
                    android:text="储蓄卡"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="已认证"
                    android:textColor="@color/text_normal_hint_color"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bank_card_info_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y16"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/text_size_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/bank_card_limit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@color/text_normal_hint_color"
        android:textSize="@dimen/text_size_12" />
</LinearLayout>